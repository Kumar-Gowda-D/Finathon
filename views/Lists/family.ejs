<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expenditure Tracker</title>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <div class="container">
        <h2>Family Expenditure Data</h2>

        <div class="actions">
            <form method="GET" action="/home/family/new">
                <button class="btn">Enter New Data</button>
            </form>
            <div class="total">
                <span>Total: ₹<%= result.toLocaleString("en-IN") %></span>
            </div>
        </div>

        <br>

        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Amount (₹)</th>
                    <th>Expenditure</th>
                </tr>
            </thead>
            <tbody>
                <% for(let listing of list){ %>
                <tr>
                    <td>
                        <a href="/home/family/<%= listing._id %>" class="link">
                            <%= listing.date.toString().split(" ").slice(0, 4).join(" ") %>
                        </a>
                    </td>
                    <td>
                        <a href="/home/family/<%= listing._id %>" class="link">
                            ₹<%= listing.amount.toLocaleString("en-IN") %>
                        </a>
                    </td>
                    <td>
                        <a href="/home/family/<%= listing._id %>" class="link">
                            <%= listing.spent %>
                        </a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</body>
</html>
